@model FluorecerApp_Client.Entities.UsersEnt

@{
    ViewBag.Title = "EditarProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<h5>Edita tus Datos Personales</h5>.
<br>

@using (Html.BeginForm("EditUser", "User", FormMethod.Post))
{
    <div class="row align-items-center justify-content-center">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-5">
            <br /><br /><br />


            @if (ViewBag.MsjPantalla != null)
            {
                <div style="text-align:center" class="alert alert-warning" role="alert">
                    @ViewBag.MsjPantalla
                </div>
            }

            @Html.HiddenFor(m => m.UserId)

            <div class="form-floating mb-3">
                <label for="floatingInput">Nombre:</label>
                @Html.TextBoxFor(m => m.Name, new { @type = "text", @class = "form-control", placeholder = "Name" })

            </div>
            <div class="form-floating mb-3">
                <label for="floatingInput">Apellidos:</label>
                @Html.TextBoxFor(m => m.LastName, new { @type = "text", @class = "form-control", @placeholder = "LastName" })

            </div>
            <div class="form-floating mb-3">
                <label for="floatingInput">Correo Electrónico:</label>
                @Html.TextBoxFor(m => m.Email, new { @type = "email", @class = "form-control", @placeholder = "correo@correo.com" })

            </div>

            <br /><br />

            <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Actualizar tus Datos</button>
        </div>
    </div>

}

