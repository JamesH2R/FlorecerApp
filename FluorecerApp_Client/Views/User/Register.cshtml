@model FluorecerApp_Client.Entities.UsersEnt

@{
    ViewBag.Title = "Crear cuenta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="my-5 d-flex justify-content-center align-items-center">
    <div class="col-md-5 p-5 shadow-sm border rounded-3">
        <h2 class="text-center mb-4 login_titles">Crear una cuenta</h2>
        @using (Html.BeginForm("RegisterRequest", "User", FormMethod.Post, new { id = "registerForm" }))
        {
            <div class="mb-3">
                <label for="inputName" class="form-label">Nombre</label>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control border_forms", id = "inputName" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger fs-6" })
            </div>
            <div class="mb-3">
                <label for="inputLastName" class="form-label">Apellido</label>
                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control border_forms", id = "inputLastName" })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger fs-6" })
            </div>
            <div class="mb-3">
                <label for="inputEmail" class="form-label">Correo electrónico</label>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control border_forms", id = "inputEmail", @type = "email" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger fs-6" })
            </div>
            <div class="mb-3">
                <label for="inputEmail" class="form-label">Dirección</label>
                @Html.TextBoxFor(model => model.Address, new { @class = "form-control border_forms", id = "inputAddress", @type = "text" })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger fs-6" })
            </div>
            <div class="mb-3">
                <label for="inputEmail" class="form-label">Celular</label>
                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control border_forms", id = "inputPhone", @type = "text" })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger fs-6" })
            </div>
            <div class="mb-3">
                <label for="inputPassword" class="form-label">Contraseña</label>
                @Html.PasswordFor(model => model.Password, new { @class = "form-control border_forms", id = "inputPassword" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger fs-6" })
            </div>
            <div class="mt-3 text-center">
                @if (TempData["ErrorMessage"] != null)
                {
                    <p class="text-danger">@TempData["ErrorMessage"]</p>
                }
            </div>
            <div class="d-grid">
                <button class="btn btn-primary btn_login mt-3" type="submit">Registrar</button>
            </div>
        }
        <div id="registerMessage" class="mt-3 text-center"></div>
        <div class="mt-3">
            <p class="mb-0  text-center">
                ¿Ya tienes una cuenta?
                @Html.ActionLink("Iniciar sesión", "Login", "User", null, new { @class = "login_titles fw-bold links" })
            </p>
        </div>
    </div>
</div>

