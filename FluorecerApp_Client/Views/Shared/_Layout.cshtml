<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Florecer - @ViewBag.Title</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Assets/css/navs.css")
    @Styles.Render("~/Assets/css/login_register.css")
    @Styles.Render("~/Assets/css/main_index.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="wrapp-content">
        <header class="wrapp-header">

            <!-- MAIN HEADER AND LOGO -->
            <div class="header-box-01">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-4 col-md-4 col-lg-4 text-xs-center">
                            <a href="./" >
                                <img src="~/Assets/img/logo_florecer.png" class="logo" alt="">
                            </a>
                        </div>
                        <div class="col-sm-8 col-md-8 col-lg-8 text-xs-center text-right">
                            <p class="phone-info">
                                <span>Contáctenos:</span> 88420980
                            </p>
                            <a class="btn-app" href="appointment.html">RESERVA UNA CITA</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- NAV BUTTONS -->
            <div id="sticky-wrapper" class="sticky-wrapper" style="height: 48px;">
                <div class="header-box-02">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="main-nav">
                                    <ul class="main-nav__list">
                                        <li class="active">
                                            @Html.ActionLink("Inicio", "Index", "Home")
                                        </li>
                                        <li class="">
                                            <a href="#about">Acerca de</a>
                                        </li>
                                        <li class="">
                                            <a href="#contact">Contacto</a>
                                        </li>
                                        <li class="">
                                            <a href="#">Servicios</a>
                                        </li>
                                        <li class="">
                                            <a href="@Url.Action("Profile","User")">Cuenta</a>
                                        </li>
                                        @if (Session["RoleName"] == null)
                                        {
                                            <li>
                                                @Html.ActionLink("Iniciar Sesión", "Login", "User")
                                            </li>
                                        }
                                        else
                                        {
                                            <li>
                                                @Html.ActionLink("Cerrar Sesión", "Logout", "User")
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div class="">
            @RenderBody()
        </div>

        <footer class="wrapp-footer">
            <div class="footer-box-01">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <a href="./" class="footer-logo">
                                <img src="img/logo.png" alt="">
                            </a>
                            <div class="widget widget-text">
                                <p>Nuestra clínica de pedagogía más prestigiada del país.</p>
                                <ul class="social-list-01">
                                    <li>
                                        <a href="#">
                                            <i class="fa-brands fa-square-facebook"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fa-brands fa-square-instagram"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fa-brands fa-square-x-twitter"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <div class="widget widget-contacts">
                                <h3 class="widget-title">Más Información</h3>
                                <ul class="widget-contacts__list">
                                    <li>Republic Workspace San Pedro, Alameda, San José</li>
                                    <li>
                                        <a class="contacts-email" href="maito:companyname@gmail.com">flormarchdi@gmail.com</a>
                                    </li>
                                    <li>+506 8842 0980</li>
                                    <li>
                                        <p class="work-time">
                                            Trabajamos para ti en horarios de
                                            <span>8:00 AM</span> a
                                            <span>6:00 PM</span>
                                        </p>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <div class="widget widget-latest-news">
                                <h3 class="widget-title">Últimas noticias</h3>
                                <ul class="widget-latest-news__list">
                                    <li>
                                        <h4 class="latest-news-title">
                                            <a href="#">Tengo depresión? 6 señales que pueden ayudarte a identificar</a>
                                        </h4>
                                        <p class="latest-news-date">25 de setiembre, 2023</p>
                                    </li>
                                    <li>
                                        <h4 class="latest-news-title">
                                            <a href="#">Trastorno de ansiedad: Cuál terapia es la correcta para mí</a>
                                        </h4>
                                        <p class="latest-news-date">25 de setiembre, 2023</p>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <div class="widget widget-quick-links">
                                <h3 class="widget-title">Accesos rápidos</h3>
                                <ul class="widget-quick-links__list">
                                    <li>
                                        <a href="#">Inicio</a>
                                    </li>
                                    <li>
                                        <a href="#">Acerca de</a>
                                    </li>
                                    <li>
                                        <a href="#">Servicios</a>
                                    </li>
                                    <li>
                                        <a href="#">Experiencia</a>
                                    </li>
                                    <li>
                                        <a href="#">Contacto</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="copy-footer-01">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <p class="copy-footer-01__text">© 2017 FLORECER. Todos los derechos reservados.</p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
