
@model IEnumerable<FluorecerApp_Client.Entities.AppointmentsEnt>
@{
    ViewBag.Title = "AppointmentList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-11 mx-auto">
        <div class="text-md-left mt-3">
            <button onclick="goBackTo('@Url.Action("Index", "User")')" style="color: #4eaac8; text-decoration: none; background: none; border: none;">
                <i class="fas fa-arrow-left me-2"></i> Regresar
            </button>
        </div>
    </div>
</div>

<script>
    function goBackTo(destination) {
        window.location.href = destination;
    }
</script>

<div class="container mt-4">
    <table id="appointmentsTable" class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Fecha</th>
                <th>Día</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.Date.ToString("dd-MM-yyyy")</td>
                    <td>@appointment.Date.ToString("dddd")</td>
                    <td>
                        @if (appointment.Available)
                        {

                            <form method="post" action="@Url.Action("DeleteAppointment", "AppointmentAdmin")">
                                @Html.Hidden("appointmentId", appointment.AppointmentId)
                                <button type="submit" class="btn btn-success">Eliminar</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newAppointmentModal">
    Agregar Nuevo Appointment
</button>

<div class="modal fade" id="newAppointmentModal" tabindex="-1" role="dialog" aria-labelledby="newAppointmentModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newAppointmentModalLabel">Nuevo Appointment</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Formulario para el nuevo appointment -->
                @using (Html.BeginForm("CreateAppointment", "AppointmentAdmin", FormMethod.Post))
                {
                    <!-- Aquí puedes agregar los campos del formulario para el nuevo appointment -->
                    <div class="form-group">
                        <label for="date">Fecha:</label>
                        <input type="date" class="form-control" id="date" name="Date" required>
                    </div>
                    <div class="form-group">
                        <label for="hour">Hora:</label>
                        <input type="text" class="form-control" id="hour" name="Hour" required>
                    </div>
                    <!-- Agrega más campos según tu modelo AppointmentsEnt -->

                    <button type="submit" class="btn btn-primary">Crear Appointment</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                }
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- JavaScript para activar el modal -->
<script>
    $(document).ready(function () {
        $('#newAppointmentModal').modal('hide'); // Oculta el modal al cargar la página

        // Lógica para mostrar el modal al hacer clic en el botón
        $('.btn-primary').click(function () {
            $('#newAppointmentModal').modal('show');
        });
    });
</script>





