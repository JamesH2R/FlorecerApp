@model FluorecerApp_Client.Entities.MedicalTestsEnt

@{
    ViewBag.Title = "Asignar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-11 mx-auto">

        <br />
        <h5>Asignar Evaluación</h5>
        <br />

        @if (!string.IsNullOrEmpty(ViewBag.ResultMessage))
        {
            <div class="alert alert-info" role="alert">
                @ViewBag.ResultMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }

        <p>Digite los datos requeridos para asignar la evaluación:</p>

        @using (Html.BeginForm("AssignEvaluation", "Test", FormMethod.Post, new { enctype = "multipart/form-data", id = "assignForm", onsubmit = "submitForm(event)" }))
        {
            <div class="form-group">
                <br />
                @Html.DropDownListFor(m => m.UserId, ViewBag.LastNames as SelectList, "-- Seleccione un Apellido --", new { @class = "form-control", required = "required" })
            </div>

            <div class="form-group">
                <br />
                @Html.TextBoxFor(m => m.FileName, new { @type = "text", @class = "form-control", required = "required", id = "fileName", placeholder = "Nombre del archivo" })
            </div>

            <br />
            <div class="form-group">
                <label for="FilePath">Archivo:</label>
                <input type="file" name="file" id="file" class="form-control custom-file-input" required />
            </div>
            <br />
            <div>
                <button type="submit" class="btn btn-primary" style="background-color: #3D3372; color: white;">Asignar</button>
            </div>
        }

    </div>

</div>

<link href="~/Assets/css/Test.css" rel="stylesheet" />