@model FluorecerApp_Client.Entities.TestResultsEnt

@{
    ViewBag.Title = "SendTest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-11 mx-auto">
        <div class="text-md-left mt-3">
            <button onclick="goBackTo('@Url.Action("TestUsers", "Test")')" style="color: #4eaac8; text-decoration: none; background: none; border: none;">
                <i class="fas fa-arrow-left me-2"></i> Regresar
            </button>
        </div>
    </div>
</div>

<script>
    function goBackTo(destination) {
        window.location.href = destination;
    }
</script>

<div class="col-lg-12">
    <div class="feature-block d-lg-flex justify-content-center">

        @if (!string.IsNullOrEmpty(ViewBag.ResultMessage))
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.ResultMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-11 mx-auto">

        <div style="text-align: center;">
            <p style="color: midnightblue;"><strong>NOTA IMPORTANTE:</strong></p>
            <p style="color: midnightblue;">Se solicita enviar el documento con la evaluación asignada nombrado con la siguiente nomenclatura</p>
            <p style="color: red;">EvaluaciónX_NombreCompleto</p>
            <p style="color: midnightblue;">"X" es el número de evaluación. Por ejemplo: Evaluación1_FlorMarchenaDiaz</p>
        </div>

        <br />
        <h5>Enviar Evaluación</h5>
        <br />

        @using (Html.BeginForm("SendResult", "Test", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <div class="form-group">
                <label for="file">Archivo:</label>
                <input type="file" name="file" class="form-control custom-file-input" required />
            </div>

            <br />
            <button type="submit" class="btn btn-primary" style="background-color: #3D3372; color: white;" onclick="sendResult()">Enviar</button>

        }

    </div>
</div>

<link href="~/Assets/css/Test.css" rel="stylesheet" />