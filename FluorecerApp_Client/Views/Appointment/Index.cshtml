@model FluorecerApp_Client.Entities.AppointmentsEnt
@using FluorecerApp_Client.Controllers
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section appoinment">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 ">
                <div class="appoinment-content">
                    <img src="~/Assets/img/kid.jpg" alt="" class="img-fluid">
                    <div class="emergency">
                        <h2 class="text-lg"><i class="icofont-phone-circle text-lg"></i>8842 0980</h2>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-10 ">
                <div class="appoinment-wrap mt-5 mt-lg-0">
                    <h2 class="mb-2 title-color">Reservar una cita</h2>
                    <p class="mb-4">Reserva una cita para poder ser atentido(a) por uno de nuestros mejores profesionales.</p>

                    @using (Html.BeginForm("CreateAppointment", "Appointment", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(model => model.Date)
                    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", placeholder = "dd/mm/yyyy", type = "date" } })
                    @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger fs-6" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Hour)
                    @Html.DropDownListFor(model => model.Hour, AppointmentsHelper.GetHourOptions(), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Hour, "", new { @class = "text-danger fs-6" })
                </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Notes)
                            @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", rows = 4, placeholder = "Notas adicionales" })
                        </div>

                        <div class="mt-3 text-center">
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <p class="text-danger">@TempData["ErrorMessage"]</p>
                            }
                        </div>

                        <button type="submit" class="btn btn-main btn-round-full">Reservar <i class="icofont-simple-right ml-2"></i></button>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

